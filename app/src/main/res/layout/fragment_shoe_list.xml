<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".screens.shoeList.ShoeListFragment">

    <!-- Used to position element freely on screen, example FAB in lower right corner -->
    <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent">

         <ScrollView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:contentDescription="@string/shoe_list">

             <!-- Used to group and vertically align Views -->
             <LinearLayout
                 android:id="@+id/linear_layout_shoe_list"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical">

             </LinearLayout>
         </ScrollView>

         <com.google.android.material.floatingactionbutton.FloatingActionButton
             android:id="@+id/button_shoe_detail"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:contentDescription="@string/add_shoe"
             android:src="@android:drawable/ic_input_add"
             android:tint="@android:color/white"
             android:layout_margin="16dp"
             app:layout_constraintRight_toRightOf="parent"
             app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>