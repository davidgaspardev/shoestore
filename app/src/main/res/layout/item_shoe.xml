<?xml version="1.0" encoding="utf-8"?>
<!-- Used to position element freely on screen -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="70dp">

    <TextView
        android:id="@+id/text_view_item_shoe_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Salomon Speedcross 4 GTX"
        app:layout_constraintBottom_toTopOf="@+id/text_view_item_company"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:layout_editor_absoluteX="46dp" />

    <TextView
        android:id="@+id/text_view_item_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="SOLOMON"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_item_shoe_name"

        tools:layout_editor_absoluteX="46dp" />

    <TextView
        android:id="@+id/text_view_item_shoe_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="42 size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />
</androidx.constraintlayout.widget.ConstraintLayout>